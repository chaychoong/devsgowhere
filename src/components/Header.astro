---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header>
  <nav>
    <div class="nav-container">
      <h2><a href="/">{SITE_TITLE}</a></h2>
      <button class="hamburger-menu" aria-label="Toggle menu">
        <span class="sr-only">Toggle navigation menu</span>
        <span class="hamburger-bar"></span>
        <span class="hamburger-bar"></span>
        <span class="hamburger-bar"></span>
      </button>
      <div class="internal-links">
        <HeaderLink href="/events">Events</HeaderLink>
        <HeaderLink href="/orgs">Organisers</HeaderLink>
        <HeaderLink href="/about">About</HeaderLink>
      </div>
      <div class="social-links">
        <a href="https://github.com/devsgowhere/devsgowhere" target="_blank">
          <span class="sr-only">Go to DevsGoWhere's GitHub repo</span>
          <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
            ><path
              fill="currentColor"
              d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
            ></path></svg
          >
        </a>
      </div>
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .nav-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
  .social-links,
  .social-links a {
    display: flex;
  }
  .hamburger-menu {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 1em 0.5em;
    margin-left: 0.5em;
  }
  .hamburger-bar {
    display: block;
    width: 25px;
    height: 3px;
    margin: 5px auto;
    background-color: var(--black);
    border-radius: 3px;
    transition: all 0.3s ease-in-out;
  }
  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
    .hamburger-menu {
      display: block;
      margin-left: auto;
    }
    .nav-container {
      flex-wrap: wrap;
    }
    .internal-links {
      display: none;
      width: 100%;
      flex-direction: column;
      margin-top: 1em;
      order: 3;
    }
    .internal-links.active {
      display: flex;
    }
    .hamburger-menu.active .hamburger-bar:nth-child(2) {
      opacity: 0;
    }
    .hamburger-menu.active .hamburger-bar:nth-child(1) {
      transform: translateY(8px) rotate(45deg);
    }
    .hamburger-menu.active .hamburger-bar:nth-child(3) {
      transform: translateY(-8px) rotate(-45deg);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const hamburgerMenu = document.querySelector('.hamburger-menu');
    const internalLinks = document.querySelector('.internal-links');
    
    if (hamburgerMenu && internalLinks) {
      hamburgerMenu.addEventListener('click', () => {
        hamburgerMenu.classList.toggle('active');
        internalLinks.classList.toggle('active');
      });
    }
  });
</script>
